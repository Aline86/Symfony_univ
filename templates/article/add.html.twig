{% extends 'base.html.twig' %}

{% block h1 %}<h1>{% trans %}Add a new article{% endtrans %}</h1>{% endblock %}
{% block langues %}
    <div class="langues">
        <ul class="flex2">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('add_article', {'_locale' : 'fr' } ) }}">FR</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('add_article', {'_locale' : 'en' })}}">EN</a>
            </li>
        </ul>
    </div>
{% endblock %}
{% block content %}
    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.content) }}
        {{ form_row(form.author) }}
        {{ form_row(form.nb_views) }}
        {{ form_row(form.published) }}
    {{ form_end(form) }}
{% endblock %}